{
    "type": "apoli:multiple",
    "drop": {
        "type": "apoli:action_over_time",
        "interval": 20,
        "rising_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:execute_command",
                    "command": "tp ~ -100 ~"
                },
                {
                    "type": "apoli:execute_command",
                    "command": "kill @s"
                }
            ]
        },
        "condition": {
           "type": "apoli:riding",
           "inverted": true
        }
    },
    "out": {
        "type": "apoli:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "apoli:riding_action",
            "action": {
                "type": "apoli:execute_command",
                "command": "data modify entity @s NoGravity set value 0b"
            }
        },
        "rising_action": {
            "type": "apoli:play_sound",
            "sound": "minecraft:block.bubble_column.bubble_pop",
            "volume": 2,
            "pitch": 0.6
        },
        "condition": {
            "type": "apoli:fluid_height",
            "fluid": "water",
            "comparison": "==",
            "compare_to": 0
        }
    },
    "boost": {
        "type": "apoli:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "apoli:riding_action",
            "action": {
                "type": "apoli:add_velocity",
                "z": 0.4,
                "space": "velocity_normalized",
                "server": false
            }
        },
        "condition": {
            "type": "apoli:fluid_height",
            "fluid": "water",
            "comparison": "!=",
            "compare_to": 0
        }
    },
    "render": {
        "type": "apoli:prevent_feature_render",
        "features": [
            "armor",
            "head",
            "held_item",
            "elytra"
        ]
    },
    "use": {
        "type": "apoli:prevent_being_used"
    }
}