{
    "name": "Ender Bubble",
    "description": "Whenever you want, you may throw an ender bubble which travels fast underwater. The bubble explodes on contact or after some time, teleporting you to its location.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": [
                "Active ability, use with [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "]."
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": [
                "You can explode the bubble remotely by pressing [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "] again."
            ]
        }
    ],
    "type": "apoli:multiple",
    "bubble": {
        "type": "origins:fire_projectile",
        "tag": "{NoGravity:1b,Tags:[\"xolotlkwt.ender_bubble\",\"xolotlkwt.new_bubble\"],Item:{id:\"minecraft:ender_pearl\",Count:1b,tag:{CustomModelData:2394623}}}",
        "cooldown": 30,
        "hud_render": {
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 6
        },
        "entity_type": "origins:enderian_pearl",
        "sound": "minecraft:entity.ender_pearl.throw",
        "speed": 1.5,
        "divergence": 1,
        "key": {
            "key": "key.origins.primary_active"
        },
        "projectile_action": {
            "type": "apoli:spawn_entity",
            "entity_type": "armor_stand",
            "tag": "{Marker:1b,Invisible:1b,Tags:[\"xolotlkwt.ender_bubble_follower\"]}",
            "bientity_action": {
                "type": "apoli:invert",
                "action": {
                    "type": "apoli:mount"
                }
            },
            "entity_action": {
                "type": "apoli:grant_power",
                "power": "*:ebubblefollow",
                "source": "*:*"
            }
        },
        "shooter_action": {
            "type": "apoli:area_of_effect",
            "radius": 16,
            "bientity_action": {
                "type": "apoli:add_to_set",
                "set": "*:*_set"
            },
            "bientity_condition": {
                "type": "apoli:target_condition",
                "condition": {
                    "type": "apoli:command",
                    "command": "execute if entity @s[type=origins:enderian_pearl,tag=xolotlkwt.new_bubble]",
                    "comparison": ">",
                    "compare_to": 0
                }
            }
        }
    },
    "set": {
        "type": "apoli:entity_set",
        "action_on_add": {
            "type": "apoli:target_action",
            "action": {
                "type": "apoli:execute_command",
                "command": "tag @s remove xolotlkwt.new_bubble"
            }
        }
    },
    "follower": {
        "type": "apoli:active_self",
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:action_on_set",
                    "set": "*:*_set",
                    "bientity_action": {
                        "type": "apoli:and",
                        "actions": [
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "tag @s add xolotlkwt.tp"
                                }
                            },
                            {
                                "type": "apoli:actor_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "execute positioned as @e[tag=xolotlkwt.tp,limit=1,sort=nearest] run tp @s ~ ~ ~ ~ ~"
                                }
                            },
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "tag @s remove xolotlkwt.tp"
                                }
                            },
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "kill @s"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "apoli:play_sound",
                    "sound": "minecraft:block.bubble_column.bubble_pop",
                    "volume": 2,
                    "pitch": 0.6
                }
            ]
        },
        "key": {
            "key": "key.origins.primary_active"
        },
        "cooldown": 1,
        "condition": {
            "type": "apoli:resource",
            "resource": "*:*_bubble",
            "comparison": "!=",
            "compare_to": 0
        }
    },
    "detectreset": {
        "type": "apoli:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:action_on_set",
                    "set": "*:*_set",
                    "bientity_action": {
                        "type": "apoli:and",
                        "actions": [
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "tag @s add xolotlkwt.tp"
                                }
                            },
                            {
                                "type": "apoli:actor_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "execute positioned as @e[tag=xolotlkwt.tp,limit=1,sort=nearest] run tp @s ~ ~ ~ ~ ~"
                                }
                            },
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "tag @s remove xolotlkwt.tp"
                                }
                            },
                            {
                                "type": "apoli:target_action",
                                "action": {
                                    "type": "apoli:execute_command",
                                    "command": "kill @s"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "apoli:play_sound",
                    "sound": "minecraft:block.bubble_column.bubble_pop",
                    "volume": 2,
                    "pitch": 0.6
                }
            ]
        },
        "condition": {
            "type": "apoli:resource",
            "resource": "*:*_bubble",
            "comparison": "==",
            "compare_to": 0
        }
    }
}